# Diva
alias dbb="diva ./diva bb"
alias dgpl="diva ./diva git pull"
alias dpsql="diva ./diva postgres"

# Change directory
alias cdd="cd ~/PrintBear/diva"
alias cdrs="cd ~/PrintBear/diva/re-store"
alias cds="cd ~/PrintBear/diva/re-store/islands/social"
alias cdx="cd ~/PrintBear/diva/re-store/islands/xstudio"
alias cdc="cd ~/PrintBear/diva/re-store/islands/core"
alias cdb="cd ~/PrintBear/diva/re-store/islands/bridge"
alias cdcn="cd ~/PrintBear/diva/re-store/islands/studio/frontend/lib/crayon"

# Docker
alias dc="diva docker compose"
alias dr="dc run --rm"

extra_services="artisan delorean core-frontend home-frontend internal-auth-frontend flag tools-frontend tools-backend invoices-frontend invoices-backend"
services="store bridge-backend core-backend social-frontend social-backend"

# docker compose up
alias dcup="eval dc up -d \$services \$extra_services"
alias dcupl="eval dc up \$services '&&' dc up -d \$extra_services"
alias dtup="dc up -d ai-endpoint-trace-inspyrenet trace ai-endpoint-nsfw-detector nsfw-detector flag"
alias dbuild="dc up -d --build --force-recreate"

# Eslint
alias glint="re-store bash -c 'git diff --cached --name-only | grep -E \"\.(js|ts|tsx)$\" | grep -v \"/generated/\" | xargs docker compose run --rm --no-TTY re-store-tools eslint --fix --quiet'"
alias dlint="dr re-store-tools eslint --ext js,ts,tsx --fix --quiet"
alias tlint="re-store eslint --config=./.i18n.eslintrc.js --no-eslintrc --ext=json shared/i18n/translations islands/social/frontend/i18n/translations --fix"

# Tests
alias dtsc="dr social-frontend yarn tsc"
alias dtscb="dr social-backend yarn tsc"
alias dtest="dr social-frontend yarn test"
alias dtestb="dr social-backend yarn test"

# Functions
function diva() {
  ( cd ~/PrintBear/diva && $* )
}

function re-store() {
  ( cd ~/PrintBear/diva/re-store && $* )
}

function gitrehash() {
  chmod +x README.md
  git add README.md
  git commit --amend --no-edit
  chmod -x README.md
  git add README.md
  git commit --amend --no-edit
}
